            </Border>
            <Border Grid.Row="3"
                    CornerRadius="10"
                    BorderThickness="4"
                    Background="{StaticResource color8}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                           Text="Level 4(lock)"
                           Style="{StaticResource Textblock1levelchoose}"></TextBlock>
                    <TextBlock Grid.Column="1"
                           Text="(0/15)"
                           Style="{StaticResource Textblock2levelchoose}"/>
                </Grid>
            </Border>
            <Border Grid.Row="4"
                    CornerRadius="10"
                    BorderThickness="4"
                    Background="{StaticResource color8}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                           Text="Level 5(lock)"
                           Style="{StaticResource Textblock1levelchoose}"></TextBlock>
                    <TextBlock Grid.Column="1"
                           Text="(0/15)"
                           Style="{StaticResource Textblock2levelchoose}"/>
                </Grid>
            </Border>
            <Border Grid.Row="5"
                    CornerRadius="10"
                    BorderThickness="4"
                    Background="{StaticResource color8}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                           Text="Level 6(lock)"
                           Style="{StaticResource Textblock1levelchoose}"></TextBlock>
                    <TextBlock Grid.Column="1"
                           Text="(0/15)"
                           Style="{StaticResource Textblock2levelchoose}"/>
                </Grid>
            </Border>
            <Border Grid.Row="6"
                    CornerRadius="10"
                    BorderThickness="4"
                    Background="{StaticResource color8}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                           Text="Level 7(lock)"
                           Style="{StaticResource Textblock1levelchoose}"></TextBlock>
                    <TextBlock Grid.Column="1"
                           Text="(0/15)"
                           Style="{StaticResource Textblock2levelchoose}"/>
                </Grid>
            </Border>
            <Border Grid.Row="7"
                    CornerRadius="10"
                    BorderThickness="4"
                    Background="{StaticResource color8}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                           Text="Level 7(lock)"
                           Style="{StaticResource Textblock1levelchoose}"></TextBlock>
                    <TextBlock Grid.Column="1"
                           Text="(0/15)"
                           Style="{StaticResource Textblock2levelchoose}"/>
                </Grid>
            </Border>
            <Border Grid.Row="8"
                    CornerRadius="10"
                    BorderThickness="4"
                    Background="{StaticResource color8}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                           Text="Level 9(lock)"
                           Style="{StaticResource Textblock1levelchoose}"></TextBlock>
                    <TextBlock Grid.Column="1"
                           Text="(0/15)"
                           Style="{StaticResource Textblock2levelchoose}"/>
                </Grid>
            </Border>
            <Border Grid.Row="9"
                    CornerRadius="10"
                    BorderThickness="4"
                    Background="{StaticResource color8}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                           Text="Level 10(lock)"
                           Style="{StaticResource Textblock1levelchoose}"></TextBlock>
                    <TextBlock Grid.Column="1"
                           Text="(0/15)"
                           Style="{StaticResource Textblock2levelchoose}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
